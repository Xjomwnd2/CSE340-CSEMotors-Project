<% layout('layout') -%>
<section class="auth">
  <h1>Sign In</h1>
  <form class="stack gap-md" action="/account/login" method="post" novalidate>
    <div class="field">
      <label for="email">Email</label>
      <input id="email" name="account_email" type="email" value="<%= locals?.account_email || '' %>" required autocomplete="email" />
      <small class="error" data-for="email"></small>
    </div>

    <div class="field">
      <label for="password">Password</label>
      <input id="password" name="account_password" type="password" required autocomplete="current-password" minlength="8" />
      <small class="error" data-for="password"></small>
    </div>

    <button class="btn btn-primary" type="submit">Sign In</button>
  </form>
  <p class="muted">No account? <a href="/account/register">Create one</a>.</p>
</section>