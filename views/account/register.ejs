<% layout('layout') -%>
<section class="auth">
  <h1>Create Account</h1>
  <form class="stack gap-md" action="/account/register" method="post" novalidate>
    <div class="grid two">
      <div class="field">
        <label for="firstname">First Name</label>
        <input id="firstname" name="account_firstname" type="text" required value="<%= locals?.account_firstname || '' %>" />
        <small class="error" data-for="firstname"></small>
      </div>
      <div class="field">
        <label for="lastname">Last Name</label>
        <input id="lastname" name="account_lastname" type="text" required value="<%= locals?.account_lastname || '' %>" />
        <small class="error" data-for="lastname"></small>
      </div>
    </div>

    <div class="field">
      <label for="reg-email">Email</label>
      <input id="reg-email" name="account_email" type="email" required value="<%= locals?.account_email || '' %>" />
      <small class="error" data-for="reg-email"></small>
    </div>

    <div class="field">
      <label for="reg-password">Password</label>
      <input id="reg-password" name="account_password" type="password" required minlength="8" />
      <small class="muted">At least 8 characters.</small>
      <small class="error" data-for="reg-password"></small>
    </div>

    <button class="btn btn-primary" type="submit">Create Account</button>
  </form>
  <p class="muted">Already have an account? <a href="/account/login">Sign in</a>.</p>
</section>